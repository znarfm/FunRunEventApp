@model IEnumerable<FunRunEventApp.Models.RegistrationModel>

@{
    ViewData["Title"] = "Registrants List";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Registrants List</h1>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Age</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Category</th>
                        <th scope="col">T-shirt Size</th>
                        <th scope="col">Emergency Contact Name</th>
                        <th scope="col">Emergency Contact Number</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var registrant in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@registrant.FullName</td>
                            <td>@registrant.Email</td>
                            <td>@registrant.ContactNumber</td>
                            <td>@registrant.Age</td>
                            <td>@registrant.Gender</td>
                            <td>@registrant.Category</td>
                            <td>@registrant.TShirtSize</td>
                            <td>@registrant.EmergencyContactName</td>
                            <td>@registrant.EmergencyContactNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4 shadow-sm">
            <p class="mb-0">No registrants found.</p>
        </div>
    }
</div>

<style>
    .table {
        background-color: white;
        border-radius: 0.375rem;
    }
    
    .table thead th {
        border-top: none;
        padding: 1rem 0.75rem;
    }
    
    .table td {
        padding: 0.75rem;
        vertical-align: middle;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,0.02);
    }
</style>
