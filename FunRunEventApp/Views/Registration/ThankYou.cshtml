@{
    ViewData["Title"] = "Registration Complete";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-4">Thank You!</h1>
                    <p class="lead text-muted mb-4">
                        Your registration for the City Fun Run 2025 has been received successfully.
                    </p>
                    <div class="bg-light p-4 rounded-3 mb-4">
                        <h5 class="mb-3">What's Next?</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-3">
                                <i class="bi bi-envelope text-primary me-2"></i>
                                Check your email for confirmation details
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-calendar-event text-primary me-2"></i>
                                Mark your calendar for March 15, 2025
                            </li>
                            <li>
                                <i class="bi bi-people text-primary me-2"></i>
                                Follow our social media pages for updates and training tips
                            </li>
                        </ul>
                    </div>
                    <a href="/" class="btn btn-primary btn-lg rounded-pill px-5">
                        Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>