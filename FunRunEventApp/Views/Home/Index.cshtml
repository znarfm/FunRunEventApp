@{
    ViewData["Title"] = "Fun Run Event";
}

<div class="bg-primary text-white py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-3 fw-bold mb-4">City Fun Run 2025</h1>
                <p class="lead fs-4 mb-5">Challenge yourself in the city's most anticipated running event!</p>
                <a href="/Registration" class="btn btn-light btn-lg px-5 py-3 rounded-pill fw-bold">
                    Register Now →
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-primary fw-bold mb-2">EVENT DETAILS</div>
                    <h5 class="fw-bold mb-1">Date & Time</h5>
                    <p class="mb-0 text-muted">March 15, 2025 - 8:00 AM</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-primary fw-bold mb-2">LOCATION</div>
                    <h5 class="fw-bold mb-1">Venue</h5>
                    <p class="mb-0 text-muted">Sumulong Park, Antipolo City</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-primary fw-bold mb-2">PARTICIPANTS</div>
                    <h5 class="fw-bold mb-1">Expected Runners</h5>
                    <p class="mb-0 text-muted">1,000+ Participants</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row align-items-center">
        <div class="col-lg-6">
            <h2 class="fw-bold mb-4">Run Categories</h2>
            <div class="d-flex flex-column gap-3">
                <div class="card border-0 bg-light">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold mb-1">5K Fun Run</h5>
                                <p class="mb-0 text-muted">Perfect for beginners</p>
                            </div>
                            <span class="badge bg-primary px-3 py-2">₱500</span>
                        </div>
                    </div>
                </div>
                <div class="card border-0 bg-light">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold mb-1">10K Challenge</h5>
                                <p class="mb-0 text-muted">For intermediate runners</p>
                            </div>
                            <span class="badge bg-primary px-3 py-2">₱800</span>
                        </div>
                    </div>
                </div>
                <div class="card border-0 bg-light">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold mb-1">Half Marathon</h5>
                                <p class="mb-0 text-muted">For experienced runners</p>
                            </div>
                            <span class="badge bg-primary px-3 py-2">₱1,200</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mt-5 mt-lg-0">
            <div class="p-5 bg-light rounded-3">
                <h3 class="fw-bold mb-4">Event Highlights</h3>
                <ul class="list-unstyled mb-0">
                    <li class="mb-3">✓ Professional timing system</li>
                    <li class="mb-3">✓ Hydration stations every 2.5km</li>
                    <li class="mb-3">✓ Finisher medals for all participants</li>
                    <li class="mb-3">✓ Post-run refreshments</li>
                </ul>
            </div>
        </div>
    </div>
</div>