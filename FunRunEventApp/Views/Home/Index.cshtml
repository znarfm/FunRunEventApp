@{
    ViewData["Title"] = "Fun Run Event";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold">City Fun Run 2025</h1>
                <p class="lead text-muted">Join us for an exciting day of fun and fitness!</p>
            </div>

            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-body p-5">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-calendar3 text-primary fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1">Date & Time</h6>
                                    <p class="mb-0">March 15, 2025 - 8:00 AM</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-geo-alt text-primary fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1">Location</h6>
                                    <p class="mb-0">Sumulong Park, Antipolo City</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-light p-4 rounded-3">
                                <h5 class="mb-3">Run Categories</h5>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2"><i class="bi bi-trophy text-warning me-2"></i>5K Fun Run</li>
                                    <li class="mb-2"><i class="bi bi-trophy-fill text-warning me-2"></i>10K Challenge</li>
                                    <li><i class="bi bi-trophy-fill text-warning me-2"></i>Half Marathon</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-5">
                        <a href="/Registration" class="btn btn-primary btn-lg px-5 py-3 rounded-pill">
                            Register Now <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                        <p class="text-muted mt-3">Limited spots available!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>